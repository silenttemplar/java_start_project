	<tr>
		<td colspan="3">
			<textarea name="comment_content" id="comment_content"></textarea>
		</td>
		<td>
			<input type="button" value="comment 쓰기" onclick="comment_write()">
		</td>
	</tr>
		</c:if>
		<c:if test="${id ==null}">
	<tr>
		<td colspan="3">
			<textarea name="comment_content" id="comment_content" disabled="disabled"></textarea>
		</td>
